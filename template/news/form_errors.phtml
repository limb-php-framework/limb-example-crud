{{form:errors to='$fields_errors'/}}
{{list using='$fields_errors' as="$error"}}
  <div class="message_error">
    <b class='title'>This fields contained errors</b>
    <ol>
      {{list:item}}
        <li><span style="color:red;">{$error.message}</span></li>
      {{/list:item}}
    </ol>
  </div>
{{/list}}